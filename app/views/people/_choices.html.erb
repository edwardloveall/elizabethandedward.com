<div class="person attending">
  <header><%= choices.name %></header>
  <div class="choices meals">
    <% Choice.meals.each do |meal, i| %>
  <%= link_to meal.titleize, person_choice_path(choices.id, choices.choice.id, 'choice[meal]' => meal), method: :put, remote: true, data: { meal: meal, type: 'json' }, class: choices.choice.decorate.selected_meal_classes(meal) %>
    <% end %>
  </div>
  <%= link_to person_choice_path(choices.id, choices.choice.id, 'choice[friday]' => !choices.choice.friday?), method: :put, remote: true, data: { friday: nil, type: 'json' }, class:  choices.choice.decorate.selected_friday_classes do %>
    <span>Join us friday?</span>
    <p class="friday-explain">
      We plan on eating a casual, family friendly dinner somewhere on Friday night. Would you like to join us?
    </p>
  <% end %>
  <%= link_to %q(Can't attend the wedding?), attending_person_choice_path(choices.id, choices.choice.id, 'choice[attending]' => false), method: :put, remote: true, data: { type: 'html' }, class: 'choice attendance' %>
</div>
