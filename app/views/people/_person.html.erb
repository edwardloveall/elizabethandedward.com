<div class="person attending">
  <header><%= person.name %></header>
  <div class="choices meals">
    <%= render 'choices/choice', person: person, meal: 'steak', explain: 'Pan-seared 8oz Ribeye, Creamy Mashed Potatoes, Wilted Spinach and Wild Mushroom Demi-glace (Gluten Free)' %>
    <%= render 'choices/choice', person: person, meal: 'lobster_ravioli', explain: 'Lobster Ravioli in Tomato-Cognac Cream Sauce Garnished with Lobster Tail and Pesto Butter' %>
    <%= render 'choices/choice', person: person, meal: 'chicken_fingers_(kids)', explain: 'Chicken Fingers and French Fries with Ketchup' %>
  </div>
  <%= link_to person_choice_path(person.id, person.choice.id, 'choice[friday]' => !person.choice.friday?), method: :put, remote: true, data: { friday: nil }, class:  person.choice.decorate.selected_friday_classes do %>
    <span>Join us friday?</span>
    <p class="friday explain">
      We plan on eating a casual, family friendly dinner somewhere on Friday night. Would you like to join us?
    </p>
  <% end %>
  <%= link_to %q(Can't attend the wedding?), attending_person_choice_path(person.id, person.choice.id, 'choice[attending]' => false), method: :put, remote: true, data: { type: 'html' }, class: 'choice attendance' %>
</div>
